<!DOCTYPE html>
<html>
  <head>
    <title>SamCloud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.small = "<%= image_url('small-logo.png')%>"
    </script>
     <meta property="og:title" content="Project Title" />
     <meta property='og:image' content="<%= image_url('project_pic.gif') %>"/>
     <meta property="og:description"
       content="A brief description of your project."
     />
     <meta property="og:url"
       content="http://projectname.herokuapp.com/"
     />

  </head>

  <body>
      <% if logged_in? %>
        <script id="bootstrap-current-user" type="text/javascript">
          window.currentUser = <%= render("api/users/user.json.jbuilder",
            user: current_user).html_safe %>
        </script>
      <% end %>
    <%= yield %>
  </body>
</html>